<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="充值选择"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_recharge_choice_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/returnback" />
   
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    
    <RelativeLayout 
        android:id="@+id/ll_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical" >
        <ImageView 
            android:id="@+id/iv_zhifubao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_zhifubao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_zhifubao"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="支付宝钱包支付" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_zhifubao"
            android:layout_below="@id/tv_zhifubao1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:text="推荐支付宝用户使用" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
     <RelativeLayout 
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical" >
        <ImageView 
            android:id="@+id/iv_weixin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_weixin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_weixin"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="微信支付" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_weixin"
            android:layout_below="@id/tv_weixin1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:text="微信安全支付" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <RelativeLayout 
        android:id="@+id/ll_yinlian"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical" >
        <ImageView 
            android:id="@+id/iv_yinlian"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_yinlian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_yinlian"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="银联支付" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_yinlian"
            android:layout_below="@id/tv_yinlian1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:text="银联手机支付" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

</LinearLayout>
