<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="查看订单"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_look_order_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/home_selected" />

        <ImageView
            android:id="@+id/iv_look_order_return_mymarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/returnback" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/iv_look_order_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_app_searchbox" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_look_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>