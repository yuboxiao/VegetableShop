<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/rl_one_goods_title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff0000" >

        <ImageView
            android:id="@+id/tv_one_goods_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/rl_one_goods_title_bar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ff0000" >

            <TextView
                android:id="@+id/tv_one_goods_center_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_one_goods_center_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_one_goods_center_goods"
                android:text="详情"
                android:textColor="#FF8888"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_one_goods_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/iv_one_goods_shopping_car"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/startup01" />

            <ImageView
                android:id="@+id/iv_one_goods_more"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_one_goods_shopping_car"
                android:background="@drawable/startup01" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_one_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>