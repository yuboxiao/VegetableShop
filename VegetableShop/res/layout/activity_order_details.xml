<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="待收货"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_wait_receipt_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/home_selected" />

        <ImageView
            android:id="@+id/iv_wait_receipt_to_mymarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/returnback" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout 
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView 
                android:id="@+id/iv_wait_receipt_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wait_receipt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="徐闻" />

            <TextView
                android:id="@+id/tv_wait_receipt_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/tv_wait_receipt_name"
                android:text="12345678909" />

            <TextView
                android:id="@+id/tv_wait_receipt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wait_receipt_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="湖北省武汉市洪山区雄楚大道武汉理工大学鉴湖校区" />
            
        </RelativeLayout>
        
    </LinearLayout>
    

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/order1_num_no_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="订单号："/>
        <TextView 
            android:id="@+id/tv_wait_receipt_order_num"
            android:text="888888888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order1_num_no_use"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/order1_time_no_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="下单时间:"/>
        <TextView 
            android:id="@+id/tv_wait_receipt_order_time"
            android:text="2016-01-02 16:28:56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order1_time_no_use"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/order1_date_no_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="送货日期:"/>
        <TextView 
            android:id="@+id/tv_wait_receipt_distribution_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order1_date_no_use"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/order1_distribution_no_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="配送时间:"/>
        <TextView 
            android:id="@+id/tv_wait_receipt_distribution_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order1_distribution_no_use"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center_vertical">
         <TextView 
             android:text="应付金额:"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"/>

         <TextView
             android:id="@+id/tv_wait_receipt_all_money"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="17dp"
             android:text="¥232.00"
             android:textColor="@color/orange" />

     </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center_vertical">
         <TextView 
             android:text="订单状态"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"/>

         <TextView
             android:id="@+id/tv_wait_receipt_order_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="17dp"
             android:text="已发货"
             android:textColor="@color/orange" />

     </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
      <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="right">
         <Button 
             android:id="@+id/btn_wait_receipt_order_tracking"
             android:layout_height="match_parent"
             android:layout_width="100dp"
             android:background="@color/orange"
             android:text="订单跟踪"
             android:textColor="@color/white"/>

     </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
      <View 
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center_vertical">
         <TextView 
             android:text="商品清单"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"/>
     </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout 
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView 
                android:id="@+id/iv_wait_receipt_goods_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wait_receipt_goods_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:text="大溪地牛排不好吃难吃的要死的牛排" />

            <TextView
                android:id="@+id/tv_wait_receipt_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wait_receipt_goods_info"
                android:text="¥232.00"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/tv_wait_receipt_goods_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_wait_receipt_goods_money"
                android:text="x2" />
            
        </RelativeLayout>
        
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>
</ScrollView>